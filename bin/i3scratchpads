#!/bin/bash

# Path:        ~/.dotfiles/bin/scratchpad.sh
# Created:     13.10.18, 01:19    @lenovo
# Last update: 29.10.18, 18:15:51 @lenovo

# >> DOC: 
# i3config helper: start tmux scratchpad if doesn't exist or show it
# requires: i3move; i3get

# >> VARIABLES:
term=st

# >> RUN:
while getopts "ufco" flag; do
    case "${flag}" in
        # >>> tmux
        u) if [[ ! $(ps aux | grep dropdown | grep -v grep) ]]; then
               i3-msg -q "exec --no-startup-id $term -c scratch -t dropdown -e ~/.dotfiles/bin/tmux-starter.sh" &&\
                   sleep 0.1
               i3-msg -q "[title=\"dropdown\"] scratchpad show"
               ~/bin/i3move -p 70 -m c
           else
               i3-msg -q "[title=\"dropdown\"] scratchpad show"
               wwid=$(~/git/hub/i3/i3get.sh -g | awk 'NR==3 {print $2}')
               swid=$(~/git/hub/i3/i3get.sh -G | awk 'NR==3 {print $2}')
               proc=$(bc -l <<< $wwid/$swid)
               if [[ $(echo $proc'==0.7' | bc -l) == 0 ]] && [[ $(~/git/hub/i3/i3get.sh -t) =~ "dropdown" ]]; then
                   ~/bin/i3move -p 70 -m c
                   i3-msg -q "border pixel 1"
               fi
           fi
           ;;
        # >>> quick scratch
        f) if [[ ! $(ps aux | grep myquickterm | grep -v grep) ]]; then
               i3-msg -q "exec --no-startup-id $term -c myquickterm -f 'Inconsolata:size=13'" &&\
                   sleep 0.1
           fi
           i3-msg -q "[class=\"myquickterm\"] scratchpad show" &&
               if [[ $(~/git/hub/i3/i3get.sh -c) =~ myquickterm ]]; then
                   ~/bin/i3move -s -m 1;
                   i3-msg -q "border pixel 1"
               fi
           ;;
        # >>> calc
        c) if [[ ! $(ps aux | grep m4ath | grep -v grep ) ]]; then
               i3-msg -q "exec --no-startup-id $term -c calculator -t m4ath -e R -q" &&\
                   sleep 0.1
           fi
           i3-msg -q "[class=\"calculator\"] scratchpad show" &&
               if [[ $(~/git/hub/i3/i3get.sh -c) =~ calculator ]]; then
                   ~/bin/i3move -m c;
                   i3-msg -q "border pixel 1"
               fi
           ;;
        # >>> words
        o) if [[ ! $(ps aux | grep w0rds | grep -v grep) ]]; then
               i3-msg -q "exec --no-startup-id $term -c whit4ker -t w0rds -e words" &&\
                   sleep 0.1
           fi
           i3-msg -q "[title=\"w0rds\"] scratchpad show" &&
               if [[ $(~/git/hub/i3/i3get.sh -c) =~ whit4ker ]]; then
                   ~/bin/i3move -p 35 -g 20 -m sw
                   i3-msg -q "border pixel 1"
               fi
           ;;
    esac
done
