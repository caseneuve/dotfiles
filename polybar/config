;** cpu
[module/cpu]
type = internal/cpu
interval = 2
format-prefix = %{T4}%{T-}
; format-prefix-foreground = ${colors.foreground-alt}
label = %percentage:3:3%

;** memory
[module/memory]
type = internal/memory
interval = 2
format-prefix = %{T4}%{T-}
label = %percentage_used:3:3%

;** network: wifi
[module/wlan]
type = internal/network
interface = ${env:WLAN:wls1}
interval = 3.0

;format-connected = <ramp-signal> <label-connected>
format-connected = <ramp-signal>
;label-connected = %signal%
format-disconnected =

; sigi font!
; ramp-signal-0 = %{T4}%{T-}
; ramp-signal-1 = %{T4}%{T-}
; ramp-signal-2 = %{T4}%{T-}

ramp-signal-0 = %{T4}%{T-}
ramp-signal-1 = %{T4}%{T-}
ramp-signal-2 = %{T4}%{T-}
ramp-signal-3 = %{T4}%{T-}
ramp-signal-4 = %{T4}%{T-}

;** network: ethernet
[module/eth]
type = internal/network
interface = enp5s0
interval = 3.0

format-connected-prefix = %{T4} %{T-}
label-connected = %linkspeed%
format-disconnected =

;** date
[module/date]
type = internal/date
interval = 5

date =
date-alt = "%a, %d %B "
time = %H:%M
time-alt = %H:%M:%S
label = %date%%time%

;** volume alsa
[module/alsa]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%
label-volume-foreground = ${root.foreground}

label-muted = %{T4}%{T-} %percentage%
label-muted-foreground = #666

ramp-volume-0 = %{T4}%{T-}
ramp-volume-1 = %{T4}%{T-}

;** battery
[module/battery]
type = internal/battery
battery = ${env:BATTERY:BAT0}
adapter = ${env:ADAPTER:AC}
full-at = 99
poll-interval = 5

format-charging = <label-charging>
format-discharging = <ramp-capacity>

label-charging = %{T4}%{T-}
label-full = %{T4}%{T-}

ramp-capacity-0 = %{T4}%{T-}
ramp-capacity-1 = %{T4}%{T-}
ramp-capacity-2 = %{T4}%{T-}
ramp-capacity-3 = %{T4}%{T-}
ramp-capacity-4 = %{T4}%{T-}
ramp-capacity-5 = %{T4}%{T-}
ramp-capacity-6 = %{T4}%{T-}
ramp-capacity-7 = %{T4}%{T-}
ramp-capacity-8 = %{T4}%{T-}
ramp-capacity-9 = %{T4}%{T-}

ramp-capacity-0-foreground = ${xrdb:poly_urgent_fg:#C0392B}

;** mail
[module/mail]
type = custom/ipc
hook-0 = ~/.dotfiles/i3/scripts/i3mailchecker
hook-1 = mbsync gmail-default
initial = 1
click-left = mbsync gmail-default
click-right = polybar-msg hook mail 1
format-prefix = %{T4} %{T-}
label = %output%

;** load avg
[module/loadavg]
type = custom/script
exec = ~/.dotfiles/i3/scripts/i3loadaverage
interval = 10
tail = true
format-prefix = %{T4}%{T-}
label = %output:5:5%

[global/wm]
margin-top = 5
margin-bottom = 5

;** wintitle
[module/wintitle]
type = custom/ipc
hook-0 = ~/git/hub/i3/i3wintitle.py
initial = 1

;** sysupdt
[module/sysupdt]
type = custom/ipc
initial = 1 
hook-0 = ~/.dotfiles/bin/sys-updt.sh
format-prefix = %{T4} %{T-}
label = %output%

;** mpv
[module/mpv]
type = custom/ipc
hook-0 = ~/.dotfiles/bin/mpv-socket2.sh -P 
hook-1 = echo ""
; hook-2 = echo "pause" 


;** mocp
[module/moc]
