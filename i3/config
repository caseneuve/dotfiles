# >>> {{ bar: primary }} 
bar {
        output primary
        tray_output none
        modifier $mod 
        status_command i3blocks -c ~/.dotfiles/i3/i3blocks.conf
        i3bar_command i3bar -t
        position top
        height 20
        # status_command i3status 

        colors {
               background $sbbg
               statusline $sbsl
               separator  $sbwabg

               # colorclass         border     backgro    text
               focused_workspace    $sbwbr     $sbwfbg    $sbwtx
               active_workspace     $sbwbr     $sbwabg    $sbowtx
               inactive_workspace   $sbwbr     $sbwabg    $sbowtx
               urgent_workspace     $brur      $bgur      $sbowtx 
               }
}

