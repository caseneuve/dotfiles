#!/bin/bash

# Path:        ~/.dotfiles/i3/scripts/i3uedder
# Created:     2019-03-25, 10:13    @lenovo
# Last update: 2019-03-29, 11:40:44 @toshiba
# Doc:
# Todo:        28/03/2019, dodać warunek, gdyby nie było netu
#                          lub suntimes.py zawiedzie

OUTPUT=$(
    curl -Ss 'https://wttr.in?0&T&Q' 2>/dev/null | cut -c 16- | head -2 | xargs echo
      )
SUNFILE=/tmp/suntimes
SCRIPT=$HOME/git/lab/py-exercises/suntimes.sh

if [[ -f $SUNFILE ]]; then
    [[ $(date +'%d %m') == $(sed 1q $SUNFILE) ]] || $SCRIPT
else
    $SCRIPT
fi

RISE=$(awk '/sunrise/ {print $2}' $SUNFILE)
SET=$(awk '/sunset/ {print $2}' $SUNFILE)
TIME=$(date +'%H:%M')

if [[ $TIME > $SET  && $TIME < $RISE ]]; then
    NIGHT=true
else
    NIGHT=false
fi

night_or_day() {
    $NIGHT && INDICATOR=$1 || INDICATOR=$2
}

case $OUTPUT in
    *Sunny*|*Clear*) night_or_day "" "";;
    *cloudy*|*Overcast*) INDICATOR="";;
    *Rain*) INDICATOR="☔";;
    *Snow*) INDICATOR="";;
    *) night_or_day "" "" ;;
esac
COL=$((${#OUTPUT} - 6))

[[ -n $OUTPUT ]] && echo $INDICATOR

case $BLOCK_BUTTON in
    #1 = Left, 2 = Middle, 3 = Right, 4 = Scroll Up, 5 = Scroll Down
    1) notify-send \
           -t 3000 \
           "$(printf '%s%*s%s' Wttr.in $COL $INDICATOR)" \
           "$OUTPUT
  $RISE
  $SET" &&\
             pkill -RTMIN+5 i3blocks ;;
esac
