#!/bin/bash

# Path:        ~/.dotfiles/i3/scripts/i3uedder
# Created:     2019-03-25, 10:13    @lenovo
# Last update: 2019-03-27, 10:40:00 @toshiba
# Doc:

OUTPUT=$(
    curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
      )

case $OUTPUT in
    Sunny|Clear) INDICATOR=" ";;
    *cloudy*) INDICATOR=" ";;
    *Rain*) INDICATOR=" ";;
    Overcast) INDICATOR=" ";;
    Snow) INDICATOR=" ";;
    *) INDICATOR=" " ;;
esac

echo $INDICATOR
col=$((${#OUTPUT} - 6))
case $BLOCK_BUTTON in
    #1 = Left, 2 = Middle, 3 = Right, 4 = Scroll Up, 5 = Scroll Down
    1) notify-send "$(printf '%s%*s%s' Wttr.in $col $INDICATOR)" \
                   "$OUTPUT" &&  pkill -RTMIN+5 i3blocks
esac
