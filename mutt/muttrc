source ~/Dropbox/config/.muttmail
source ~/Dropbox/config/.mutt_aliases
set mailcap_path=~/.mutt/mailcap

# kolory
source ~/.mutt/schemes/manjaro-color

# set move = no 
set imap_keepalive = 900

# sortowanie 
set sort=threads
set sort_browser=date
set sort_aux=reverse-last-date-received

# editor
#set editor="nano --fill=80"
#set editor="emacsclient -nw"
set editor="emacsclient -a \"\" -t"

# kbd
source ~/.mutt/kbd.conf

# nie podświetlaj całej linii
set arrow_cursor 

# open html messages
auto_view text/html                                  
alternative_order text/plain text/enriched text/html 

# sidebar
#set sidebar_visible=yes

# index format (http://www.mutt.org/doc/manual/#index-format)
#                num  flag  att.      from     subj      date             size       label#
set index_format="%4C %S %?X?A& ? %?M?[%M]&   ? %-25.25L %-50.50s  %{%d/%m/%y}     (%4.4c)     %> %B"

set record="$HOME/.mail/sent"

