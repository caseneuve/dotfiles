#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'

RED="\[$(tput setaf 1)\]"
GREEN="\[$(tput setaf 2)\]"
RESET="\[$(tput sgr0)\]"

#PS1='[\u@\h \W]\$ '
PS1="${RED}[\u ${GREEN}\w${RED}]# ${RESET}"

if [ -f ~/.bash_aliases ]; then
. ~/.bash_aliases
fi

shopt -s autocd

export EDITOR=nano
