# {general}
#auto-reload yes
external-url-viewer "urlview"
browser qutebrowser

# {bindings}
bind-key k down
bind-key i up
bind-key k next articlelist
bind-key i prev articlelist
bind-key K next-feed articlelist
bind-key I prev-feed articlelist
bind-key G end
bind-key g home
bind-key o pagedown
bind-key u pageup
bind-key l open
bind-key j quit articlelist
bind-key j quit article
bind-key q quit 
bind-key a toggle-article-read
bind-key n next-unread
bind-key p prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete
bind-key O open-in-browser
bind-key C mark-feed-read

# {string format}
articlelist-title-format "%T (%u nieprzeczytane)"
feedlist-title-format "RSS: %u nieprzeczytane, %t wszystkie%?T? - tag `%T'&?"

# {colors}
# {{main}}
color listnormal cyan default
color listfocus black yellow standout bold
color listnormal_unread blue default
color listfocus_unread yellow default bold
color info black green bold
#color article cyan default
color article white default

# {{highligh text}}
highlight article "^Kanał:.*" color174 black bold
highlight article "^Tytuł:.*" color223 black bold
highlight article "^Autor:.*" color114 black
highlight article "^Odsyłacz:.*" color116 black
highlight article "^Data:.*" color223 black
highlight article "\\[[0-9][0-9]*\\]" color203 default #bold #66 # odsyłacze w tekście
highlight article "http.[a-zA-A0-9\./=?]*" blue default underline
highlight article "^Odsyłacze:.$" white black underline bold
